@model IEnumerable<DoAnPhanMem.Models.Order>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
}
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Danh sách đơn hàng</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã đơn hàng</th>
            <th>Khách hàng</th>
            <th>Ngày đặt hàng</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.CustomerName</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>@order.Status</td>
                <td>
                    <a href="/Order/Details/@order.Id" class="btn btn-info">Xem chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
