@model IEnumerable<DoAnPhanMem.Models.SanPham>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Danh sách sản phẩm</h2>

<a class="btn btn-primary" href="/Admin/Create">Thêm sản phẩm</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã sản phẩm</th>
            <th>Tên sản phẩm</th>
            <th>Mô tả</th>
            <th>Giá bán</th>
            <th>Giá giảm</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sanPham in Model)
        {
            <tr>
                <td>@sanPham.MaSanPham</td>
                <td>@sanPham.TenSanPham</td>
                <td>@sanPham.MoTa</td>
                <td>@sanPham.GiaBan</td>
                <td>@sanPham.GiaGiam</td>
                <td>
                    <a href="/Admin/Edit/@sanPham.MaSanPham" class="btn btn-warning">Sửa</a>
                    <a href="/Admin/Delete/@sanPham.MaSanPham" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

