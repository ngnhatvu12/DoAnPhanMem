@model ChiTietSanPham

@{
    ViewData["Title"] = Model.SanPham.TenSanPham;
    Layout = "~/Views/Shared/_LayoutOgani2.cshtml";
    <link href="~/css/site.css" rel="stylesheet">
    <link href="~/css/Detail.css" rel="stylesheet" >

}

<div class="product-detail-container">
    <div class="row">
        <!-- Hình ảnh sản phẩm -->
        <div class="col-md-6">
            <div class="product-image">
                @if (!string.IsNullOrEmpty(Model.HinhAnh))
                {
                    <img src="~/LayoutOgani/img/@Model.HinhAnh" alt="@Model.SanPham.TenSanPham" class="main-product-image" />
                }
                else
                {
                    <img src="~/img/no-image.png" alt="No Image" />
                }
            </div>
        </div>

        <!-- Thông tin chi tiết sản phẩm -->
        <div class="col-md-6">
            <div class="product-info">
                <h1 class="product-title">@Model.SanPham.TenSanPham</h1>
      
                <p class="product-price">
                    Giá gốc: <span class="original-price">@Model.SanPham.GiaBan đ</span>
                    @if (Model.SanPham.GiaGiam > 0)
                    {
                        <span class="discount-price">Giá giảm: @Model.SanPham.GiaGiam đ</span>
                    }
                </p>
                <p class="product-status">
                    Màu sắc:
                    <select id="color-selector">
                        <option value="Vang">Vàng</option>
                        <option value="Den">Đen</option>
                        <option value="Xanhduong">Xanh dương</option>
                        <option value="Trang">Trắng</option>
                    </select>
                </p>
                <p class="product-size">
                    Kích thước:
                    <select id="size-selector">
                        <option value="S">S</option>
                        <option value="M">M</option>
                        <option value="L">L</option>
                    </select>
                </p>

                <div class="quantity-selector">
                    <label for="quantity">Số lượng:</label>
                    <input type="number" id="quantity" value="1" min="1" max="@Model.SoLuongTon" />
                </div>
                <!-- Mã giảm giá -->
                <div class="product-discount-code">
                    Mã giảm giá: <input type="text" placeholder="Nhập mã giảm giá" />
                    <button type="button">Áp dụng</button>
                </div>
                <!-- Nút đặt hàng và thêm vào giỏ hàng -->
                <div class="product-action">
                    <button class="btn btn-order" onclick="orderProduct()">Đặt hàng</button>
                    <a href="/Cart/AddToCart?id=@Model.MaChiTietSP" class="btn btn-add-to-cart"><i class="fa fa-shopping-cart"></i> Thêm vào giỏ hàng</a>
                </div>
            
            </div>
        </div>
    </div>

    <!-- Mô tả chi tiết -->
    <div class="product-description">
        <h2>Mô tả chi tiết</h2>
        <p>@Model.SanPham.MoTa</p>
    </div>
    <div class="product-rating">
        <h3>Đánh giá sản phẩm</h3>
        <div class="star-rating">
            <span class="star" data-value="1">&#9733;</span>
            <span class="star" data-value="2">&#9733;</span>
            <span class="star" data-value="3">&#9733;</span>
            <span class="star" data-value="4">&#9733;</span>
            <span class="star" data-value="5">&#9733;</span>
        </div>
    </div>

    <!-- Thêm vào yêu thích -->
    <div class="add-to-favorites">
        <button class="btn-favorite"><i class="fa fa-heart"></i> Thêm vào yêu thích</button>
    </div>

    <!-- Phần bình luận -->
    <div class="comments-section">
        <h3>Bình luận</h3>
        <div class="comments-list">
            <!-- Ví dụ bình luận -->
            <div class="comment-item">
                <p><strong>Người dùng 1:</strong> Sản phẩm tuyệt vời!</p>
            </div>
            <div class="comment-item">
                <p><strong>Người dùng 2:</strong> Tôi thích sản phẩm này rất nhiều!</p>
            </div>
        </div>
        <textarea placeholder="Nhập bình luận của bạn..." rows="3"></textarea>
        <button class="btn-submit-comment">Gửi bình luận</button>
    </div>
</div>

<script>
    function orderProduct() {
        // Logic đặt hàng có thể được thêm vào đây
        alert("Sản phẩm đã được đặt hàng!");
    }
</script>