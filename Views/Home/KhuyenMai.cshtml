@{
    ViewData["Title"] = "Khuyến mãi";
    Layout = "~/Views/Shared/_LayoutOgani2.cshtml";
    var discountCodes = ViewBag.DiscountCodes as List<GiamGia>;
    var isVip = ViewBag.IsVip as bool? ?? false;
}

<section class="breadcrumb-section set-bg" style="background-image: url('/LayoutOgani/img/background.jpg');">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Chương trình khuyến mãi</h2>
                    <div class="breadcrumb-options">
                        <div class="breadcrumb__option">
                            <a href="/">Trang chủ</a>
                            <span>Khuyến mãi</span>
                        </div>
                        @if (isVip)
                        {
                            <div class="vip-badge">
                                <i class="fa fa-crown"></i> THÀNH VIÊN VIP
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="loyalty-section">
    <div class="container" style="max-width:90%">
        <div class="row">
            <div class="col-lg-12">
                <div class="loyalty-progress">
                    <h3 class="loyalty-title">THÀNH TÍCH TIÊU DÙNG</h3>
                    <div class="progress-container">
                        <div class="progress-bar">
                            <div class="progress-fill" style="width: @ViewBag.ProgressPercentage%;"></div>
                        </div>
                        <div class="milestones">
                            @{
                                var milestones = new[] { 500000, 1000000, 2000000, 3500000, 5000000 };
                                var icons = new[] { "fa-crown", "fa-coins", "fa-gift", "fa-truck", "fa-gem" };
                                var labels = new[] { "VIP", "TÍCH ĐIỂM", "QUÀ TẶNG", "MIỄN PHÍ VC", "VIP DIAMOND" };
                                var rewards = new[] {
                            "Trở thành VIP với ưu đãi đặc biệt",
                            "Mở khóa tính năng tích điểm",
                            "Nhận quà tặng độc quyền",
                            "Miễn phí vận chuyển trọn đời",
                            "Thành viên Diamond cao cấp"
                            };
                            }
                            @for (int i = 0; i < milestones.Length; i++)
                            {
                                <div class="milestone milestone-@(i+1) @(ViewBag.TongTienDaTieu >= milestones[i] ? "achieved" : "")"
                                     data-milestone="@milestones[i]">
                                    <div class="milestone-icon">
                                        <i class="fas @icons[i]"></i>
                                    </div>
                                    <div class="milestone-content">
                                        <span class="milestone-amount">@(milestones[i] < 1000000 ? (milestones[i] / 1000 + "K") : (milestones[i] / 1000000 + "TR"))</span>
                                        <div class="milestone-reward">@rewards[i]</div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="progress-info">
                        <div class="current-info">
                            <div class="info-box">
                                <span class="info-label">
                                    <i class="fas fa-wallet"></i> TIÊU DÙNG HIỆN TẠI
                                </span>
                                <span class="current-amount">@ViewBag.TongTienDaTieu.ToString("N0")đ</span>
                                <div class="progress-percentage">
                                    Đã đạt <span>@ViewBag.ProgressPercentage%</span> mục tiêu
                                </div>
                            </div>
                        </div>
                        <div class="target-info">
                            <div class="info-box">
                                <span class="info-label">
                                    <i class="fas fa-bullseye"></i> MỤC TIÊU TIẾP THEO
                                </span>
                                <span class="target-amount">@ViewBag.NextMilestone.ToString("N0")đ</span>
                                <div class="progress-percentage">
                                    Còn thiếu <span>@((ViewBag.NextMilestone - ViewBag.TongTienDaTieu).ToString("N0"))đ</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Discount Section Begin -->
<section class="featured spad">
    <div class="container" style="max-width:100%">
        @if (isVip)
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>Ưu đãi đặc biệt dành riêng cho VIP</h2>
                    </div>
                </div>
            </div>

            <div class="row">
                @foreach (var code in discountCodes.Where(c => c.LoaiGiamGia == "VIP"))
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="discount-card vip @(code.NgayHieuLuc < DateTime.Now ? "expired" : "")">
                            <div class="discount-header">
                                <span class="discount-value">Giảm @code.MucGiamGia.ToString("N0")đ</span>
                                <span class="discount-badge">VIP EXCLUSIVE</span>
                                <span class="discount-code">@code.MaGiamGia</span>
                            </div>
                            <div class="discount-body">
                                <p><i class="fa fa-calendar"></i> Hiệu lực đến: @code.NgayHieuLuc.ToString("dd/MM/yyyy")</p>
                                <p><i class="fa fa-info-circle"></i> @code.DieuKien</p>
                            </div>
                            <div class="discount-footer">
                                @if (code.NgayHieuLuc >= DateTime.Now)
                                {
                                    <button class="btn-copy-code" data-code="@code.MaGiamGia">
                                        <i class="fa fa-copy"></i> Sao chép mã
                                    </button>
                                }
                                else
                                {
                                    <button class="btn-copy-code expired" disabled>
                                        <i class="fa fa-times-circle"></i> Hết hạn
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Mã giảm giá dành cho mọi khách hàng</h2>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var code in discountCodes.Where(c => c.LoaiGiamGia != "VIP"))
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="discount-card @(code.NgayHieuLuc < DateTime.Now ? "expired" : "")">
                        <div class="discount-header">
                            <span class="discount-value">Giảm @code.MucGiamGia.ToString("N0")đ</span>
                            <span class="discount-code">@code.MaGiamGia</span>
                        </div>
                        <div class="discount-body">
                            <p><i class="fa fa-calendar"></i> Hiệu lực đến: @code.NgayHieuLuc.ToString("dd/MM/yyyy")</p>
                            <p><i class="fa fa-info-circle"></i> @code.DieuKien</p>
                        </div>
                        <div class="discount-footer">
                            @if (code.NgayHieuLuc >= DateTime.Now)
                            {
                                <button class="btn-copy-code" data-code="@code.MaGiamGia">
                                    <i class="fa fa-copy"></i> Sao chép mã
                                </button>
                            }
                            else
                            {
                                <button class="btn-copy-code expired" disabled>
                                    <i class="fa fa-times-circle"></i> Hết hạn
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
