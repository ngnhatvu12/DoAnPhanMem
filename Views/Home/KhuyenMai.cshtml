@section Scripts {
    <script>
        $(document).ready(function () {
            // Copy discount code to clipboard
            $('.btn-copy-code').click(function () {
                var code = $(this).data('code');
                navigator.clipboard.writeText(code).then(function () {
                    alert('Đã sao chép mã giảm giá: ' + code + '\nBạn có thể sử dụng mã này khi thanh toán!');
                }, function () {
                    alert('Không thể sao chép mã. Vui lòng thử lại.');
                });
            });
        });
        $(document).ready(function () {
            // Tooltip cho các mốc thành tích
            $('.milestone').each(function () {
                var milestone = $(this).data('milestone');
                var tooltipText = '';

                switch (milestone) {
                    case '500000':
                        tooltipText = 'Đạt 500,000đ - Mở khóa huy hiệu VIP';
                        break;
                    case '1000000':
