@model List<SanPham>

@{
    ViewData["Title"] = "Kết quả tìm kiếm";
    Layout = "~/Views/Shared/_LayoutOgani.cshtml"; // Layout chính
    <link href="~/css/Item.css" rel="stylesheet">
}

@if (!Model.Any())
{
    <p>Không tìm thấy sản phẩm nào khớp với từ khóa.</p>
}
else
{
    <div class="product-search-results">
        <div class="row" style="justify-content:flex-start; margin-left:5px; margin-right:5px">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="product-item">
                        <div class="product-title">
                            <a href="#" tabindex="-1">@item.TenSanPham</a>
                            <div class="ratting">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>
                        </div>
                        <div class="product-image">
                            @if (!string.IsNullOrEmpty(item.HinhAnh))
                            {
                                <img src="~/LayoutOgani/img/@item.HinhAnh" alt="Product Image" style="height:400px;" />
                            }
                            else
                            {
                                <img src="~/img/no-image.png" alt="No Image" />
                            }
                            <div class="product-action">
                                <a href="#" tabindex="-1"><i class="fa fa-cart-plus"></i></a>
                                <a href="#" tabindex="-1"><i class="fa fa-heart"></i></a>
                                <a href="#" tabindex="-1"><i class="fa fa-search"></i></a>
                            </div>
                        </div>
                        <div class="product-price">
                            <h3>@item.GiaBan.ToString("N0")<span>đ</span></h3>
                            <a class="btn" href="#" tabindex="-1"><i class="fa fa-shopping-cart"></i>Mua ngay</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
