@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@model IEnumerable<ThongBao>
@{
    Layout = "~/Views/Shared/_LayoutOgani2.cshtml";
}
<div class="container mx-auto py-6">
    <h2 class="text-2xl font-semibold mb-4">Thông Báo</h2>
    <div class="bg-white shadow-md rounded-lg p-6">
        @if (!Model.Any())
        {
            <p class="text-gray-500">Bạn chưa có thông báo nào.</p>
        }
        else
        {
            <form id="notificationForm">
                @Html.AntiForgeryToken() <!-- Thêm token vào form -->
                <ul class="space-y-4">
                    @foreach (var thongBao in Model)
                    {
                        <li class="flex items-center justify-between p-4 bg-gray-100 rounded-lg hover:bg-gray-200 transition" data-id="@thongBao.MaThongBao">
                            <div class="flex items-center">
                                @if (thongBao.TrangThai == 0)
                                {
                                    <span class="block w-3 h-3 bg-red-500 rounded-full mr-4"></span>
                                }
                                <p class="text-gray-700">@thongBao.MoTa</p>
                            </div>
                            <small class="text-gray-500">@thongBao.ThoiGian.ToString("dd/MM/yyyy HH:mm")</small>
                        </li>
                    }
                </ul>
            </form>
        }
    </div>
</div>
<script>
    document.querySelectorAll('li').forEach(item => {
        item.addEventListener('click', function () {
            const maThongBao = this.dataset.id;
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value; // Lấy token
            fetch('/Access/MarkAsRead', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token // Gửi token trong header
                },
                body: JSON.stringify({ maThongBao: maThongBao })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        this.querySelector('span').classList.add('hidden'); // Ẩn dấu đỏ
                    }
                });
        });
    });
</script>


