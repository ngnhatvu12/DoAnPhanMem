@model List<SanPham>

@{
    ViewData["Title"] = "Sản phẩm theo danh mục";
    Layout = "~/Views/Shared/_LayoutOgani2.cshtml"; // Layout chính
     <link href="~/css/Item.css" rel="stylesheet">
    <script src="~/js/site.js"></script>
}

<section class="breadcrumb-section" style="background-image: url('/LayoutOgani/img/background.jpg');">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>@ViewBag.TenDanhMuc</h2>
                    <div class="breadcrumb__option">
                        <a href="@Url.Action("Index", "Home")">Trang chủ</a>
                        <span>@ViewBag.TenDanhMuc</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="row">
    <div class="col-lg-3 col-md-4">
        <div class="filter-sidebar">
            <h4>Lọc sản phẩm</h4>
            <form id="filterForm" method="get" action="@Url.Action("SanPhamTheoDanhMuc", "Category")">
    <input type="hidden" name="maDanhMuc" value="@ViewBag.MaDanhMuc" /> 
    <div class="filter-group">
        <label for="minPrice">Giá thấp nhất</label>
        <input type="number" class="form-control" id="minPrice" name="minPrice" placeholder="Giá từ..." />

        <label for="maxPrice">Giá cao nhất</label>
        <input type="number" class="form-control" id="maxPrice" name="maxPrice" placeholder="Giá đến..."/>
    </div>
    <div class="filter-group">
        <label for="category">Loại sản phẩm</label>
        <select class="form-control" id="category" name="maLoai">
            <option value="">-- Tất cả --</option>
            @foreach (var loai in (ViewBag.DanhSachLoai as List<Loai>))
            {
                <option value="@loai.MaLoai">@loai.TenLoai</option>
            }
        </select>
    </div>
    <div class="filter-group">
        <label for="color">Màu sắc</label>
        <select class="form-control" id="color" name="maMauSac">
            <option value="">-- Tất cả --</option>
            @foreach (var mauSac in (ViewBag.DanhSachMauSac as List<MauSac>))
            {
                <option value="@mauSac.MaMauSac">@mauSac.TenMauSac</option>
            }
        </select>
    </div>
    <div class="filter-group">
        <label for="size">Kích thước</label>
        <select class="form-control" id="size" name="maKichThuoc">
            <option value="">-- Tất cả --</option>
            @foreach (var kichThuoc in (ViewBag.DanhSachKichThuoc as List<KichThuoc>))
            {
                <option value="@kichThuoc.MaKichThuoc">@kichThuoc.TenKichThuoc</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Lọc</button>
</form>
        </div>
    </div>
    <div class="col-lg-9 col-md-8">
        @if (Model == null || !Model.Any())
        {
            <p>Không có sản phẩm nào trong danh mục này.</p>
        }
        else
        {
            <div class="product-category-page">
                <div class="row" style="justify-content: flex-start">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product-item">
                                <div class="product-title">
                                    <a href="@Url.Action("ProductDetail", "Home", new { id = item.MaSanPham })">@item.TenSanPham</a>
                                    <div class="ratting">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                </div>
                                <div class="product-image">
                                    @if (!string.IsNullOrEmpty(item.HinhAnh))
                                    {
                                        <img src="~/LayoutOgani/img/@item.HinhAnh" alt="Product Image" style="height:400px !important" />
                                    }
                                    else
                                    {
                                        <img src="~//img/no-image.png" alt="No Image" />
                                    }
                                    <div class="product-action">
                                        <a href="#"><i class="fa fa-cart-plus"></i></a>
                                        <a href="#"><i class="fa fa-heart"></i></a>
                                        <a href="#"><i class="fa fa-search"></i></a>
                                    </div>
                                </div>
                                <div class="product-price">
                                    <h3>@item.GiaBan.ToString("N0")<span>đ</span></h3>
                                    <a class="btn" href=""><i class="fa fa-shopping-cart"></i>Mua ngay</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>
<style>
    /* ========== Breadcrumb Section ========== */
    .breadcrumb-section {
        padding: 120px 0;
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        position: relative;
        margin-bottom: 50px;
    }

        .breadcrumb-section:before {
            content: "";
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
        }

    .breadcrumb__text {
        position: relative;
        z-index: 1;
        text-shadow: 1px 1px 3px rgba(0,0,0,0.3);
    }

        .breadcrumb__text h2 {
            color: #ffffff;
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 1rem;
            letter-spacing: 1px;
        }

    .breadcrumb__option {
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .breadcrumb__option a {
            color: #ffffff;
            font-size: 1.1rem;
            font-weight: 600;
            margin-right: 1.5rem;
            position: relative;
            transition: all 0.3s ease;
        }

            .breadcrumb__option a:hover {
                color: #574cff;
                transform: translateY(-2px);
            }

            .breadcrumb__option a:after {
                position: absolute;
                right: -1rem;
                top: 50%;
                transform: translateY(-50%);
                content: "›";
                color: #ffffff;
                font-size: 1.5rem;
            }

        .breadcrumb__option span {
            color: #574cff;
            font-size: 1.1rem;
            font-weight: 700;
        }

    .filter-sidebar {
        margin-left: 10px;
        background: #ffffff;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
        position: sticky;
        top: 50px;
        height: fit-content;
        max-height: 90vh;
        overflow-y: auto;
        border: 2px solid #3498db; 
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
    }

        .filter-sidebar h4 {
            color: #3498db;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid #e0e0e0;
            font-weight: 600;
        }

    .filter-group {
        margin-bottom: 20px;
    }

        .filter-group label {
            display: block;
            margin-bottom: 8px;
            color: #555;
            font-weight: 500;
        }

        .filter-group input[type="number"],
        .filter-group select {
            width: 100%;
            padding: 10px 15px;
            border: 1px solid #ddd;
            border-radius: 6px;
            background-color: #f8f9fa;
            transition: all 0.3s;
            margin-bottom: 10px;
        }

            .filter-group input[type="number"]:focus,
            .filter-group select:focus {
                border-color: #3498db;
                box-shadow: 0 0 0 2px rgba(52, 152, 219, 0.2);
                outline: none;
                background-color: #fff;
            }

    #filterForm .btn-primary {
        width: 100%;
        padding: 12px;
        background-color: #3498db;
        border: none;
        border-radius: 6px;
        color: white;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        margin-top: 10px;
    }

        #filterForm .btn-primary:hover {
            background-color: #2980b9;
            transform: translateY(-2px);
        }

    .product-category-page .row > div {
        margin-bottom: 20px;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
    }

    .col-lg-3 {
        position: relative;
    }
</style>
