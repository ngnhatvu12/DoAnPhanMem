@model List<SanPham>

@{
    ViewData["Title"] = "Sản phẩm theo danh mục";
    Layout = "~/Views/Shared/_LayoutOgani2.cshtml"; // Layout chính
     <link href="~/css/Item.css" rel="stylesheet">
    <script src="~/js/site.js"></script>
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <!-- Lọc sản phẩm -->
    <div class="col-lg-3 col-md-4">
        <div class="filter-sidebar">
            <h4>Lọc sản phẩm</h4>
            <form id="filterForm" method="get" action="@Url.Action("SanPhamTheoDanhMuc", "Category")">
    <input type="hidden" name="maDanhMuc" value="@ViewBag.MaDanhMuc" /> <!-- Lưu mã danh mục -->

    <!-- Lọc theo giá -->
    <div class="filter-group">
        <label for="minPrice">Giá thấp nhất</label>
        <input type="number" class="form-control" id="minPrice" name="minPrice" placeholder="Giá từ..." />

        <label for="maxPrice">Giá cao nhất</label>
        <input type="number" class="form-control" id="maxPrice" name="maxPrice" placeholder="Giá đến..."/>
    </div>

    <!-- Lọc theo loại -->
    <div class="filter-group">
        <label for="category">Loại sản phẩm</label>
        <select class="form-control" id="category" name="maLoai">
            <option value="">-- Tất cả --</option>
            @foreach (var loai in (ViewBag.DanhSachLoai as List<Loai>))
            {
                <option value="@loai.MaLoai">@loai.TenLoai</option>
            }
        </select>
    </div>

    <!-- Lọc theo màu sắc -->
    <div class="filter-group">
        <label for="color">Màu sắc</label>
        <select class="form-control" id="color" name="maMauSac">
            <option value="">-- Tất cả --</option>
            @foreach (var mauSac in (ViewBag.DanhSachMauSac as List<MauSac>))
            {
                <option value="@mauSac.MaMauSac">@mauSac.TenMauSac</option>
            }
        </select>
    </div>

    <!-- Lọc theo kích thước -->
    <div class="filter-group">
        <label for="size">Kích thước</label>
        <select class="form-control" id="size" name="maKichThuoc">
            <option value="">-- Tất cả --</option>
            @foreach (var kichThuoc in (ViewBag.DanhSachKichThuoc as List<KichThuoc>))
            {
                <option value="@kichThuoc.MaKichThuoc">@kichThuoc.TenKichThuoc</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Lọc</button>
</form>
        </div>
    </div>

    <!-- Hiển thị sản phẩm -->
    <div class="col-lg-9 col-md-8">
        @if (Model == null || !Model.Any())
        {
            <p>Không có sản phẩm nào trong danh mục này.</p>
        }
        else
        {
            <div class="product-category-page">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product-item">
                                <div class="product-title">
                                    <a href="@Url.Action("ProductDetail", "Home", new { id = item.MaSanPham })">@item.TenSanPham</a>
                                    <div class="ratting">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                </div>
                                <div class="product-image">
                                    @if (!string.IsNullOrEmpty(item.HinhAnh))
                                    {
                                        <img src="~/LayoutOgani/img/@item.HinhAnh" alt="Product Image" style="height:320px !important" />
                                    }
                                    else
                                    {
                                        <img src="~//img/no-image.png" alt="No Image" />
                                    }
                                    <div class="product-action">
                                        <a href="#"><i class="fa fa-cart-plus"></i></a>
                                        <a href="#"><i class="fa fa-heart"></i></a>
                                        <a href="#"><i class="fa fa-search"></i></a>
                                    </div>
                                </div>
                                <div class="product-price">
                                    <h3>@item.GiaBan.ToString("N0")<span>đ</span></h3>
                                    <a class="btn" href=""><i class="fa fa-shopping-cart"></i>Mua ngay</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>
<style>
    .filter-sidebar {
        margin-left: 10px;
        background: #ffffff;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
        position: sticky;
        top: 50px;
        height: fit-content;
        max-height: 90vh;
        overflow-y: auto;
        border: 2px solid #3498db; /* Viền xanh dương */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Đổ bóng nhẹ */
    }

        .filter-sidebar h4 {
            color: #3498db;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid #e0e0e0;
            font-weight: 600;
        }

    .filter-group {
        margin-bottom: 20px;
    }

        .filter-group label {
            display: block;
            margin-bottom: 8px;
            color: #555;
            font-weight: 500;
        }

        .filter-group input[type="number"],
        .filter-group select {
            width: 100%;
            padding: 10px 15px;
            border: 1px solid #ddd;
            border-radius: 6px;
            background-color: #f8f9fa;
            transition: all 0.3s;
            margin-bottom: 10px;
        }

            .filter-group input[type="number"]:focus,
            .filter-group select:focus {
                border-color: #3498db;
                box-shadow: 0 0 0 2px rgba(52, 152, 219, 0.2);
                outline: none;
                background-color: #fff;
            }

    #filterForm .btn-primary {
        width: 100%;
        padding: 12px;
        background-color: #3498db;
        border: none;
        border-radius: 6px;
        color: white;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        margin-top: 10px;
    }

        #filterForm .btn-primary:hover {
            background-color: #2980b9;
            transform: translateY(-2px);
        }

    .product-category-page .row > div {
        margin-bottom: 20px;
    }

    /* Đảm bảo layout không bị ảnh hưởng */
    .row {
        display: flex;
        flex-wrap: wrap;
    }

    .col-lg-3 {
        position: relative;
    }
</style>
