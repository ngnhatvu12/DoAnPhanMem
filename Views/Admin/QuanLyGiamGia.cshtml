    <!-- Modal -->
    <div class="modal fade" id="addDiscountModal" tabindex="-1" aria-labelledby="addDiscountModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="addDiscountForm" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addDiscountModalLabel">Thêm Mã Giảm Giá</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="maGiamGia" class="form-label">Mã Giảm Giá</label>
                            <input type="text" id="maGiamGia" name="maGiamGia" class="form-control" readonly value="@Guid.NewGuid().ToString().Substring(0, 8).ToUpper()">
                        </div>
                        <div class="mb-3">
                            <label for="ngayTao" class="form-label">Ngày Tạo</label>
                            <input type="text" id="ngayTao" name="ngayTao" class="form-control" readonly value="@DateTime.Now.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="mb-3">
                            <label for="mucGiamGia" class="form-label">Mức Giảm Giá (%)</label>
                            <input type="number" id="mucGiamGia" name="mucGiamGia" class="form-control" min="0" step="0.01" placeholder="Nhập mức giảm giá">
                        </div>
                        <div class="mb-3">
                            <label for="dieuKien" class="form-label">Điều Kiện</label>
                            <textarea id="dieuKien" name="dieuKien" class="form-control" rows="3" placeholder="Nhập điều kiện áp dụng"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="ngayHieuLuc" class="form-label">Ngày Hết Hiệu Lực</label>
                            <input type="date" id="ngayHieuLuc" name="ngayHieuLuc" class="form-control">
                            <small class="form-text text-muted">Ngày hết hiệu lực phải lớn hơn ngày tạo.</small>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
