        //Modal
        $("#show-emp").on("click", function () {
          $("#ModalUP").modal({ backdrop: false, keyboard: false })
        });

        document.getElementById('addDiscountForm').addEventListener('submit', function (event) {
            event.preventDefault(); // Ngăn form submit mặc định

            const ngayTao = new Date(document.getElementById('ngayTao').value);
            const ngayHieuLuc = new Date(document.getElementById('ngayHieuLuc').value);

            if (ngayHieuLuc <= ngayTao) {
                alert('Ngày hết hiệu lực phải lớn hơn ngày tạo.');
                return;
            }

            // Dữ liệu hợp lệ, gửi form
            const formData = new FormData(this);

            fetch('/Admin/Create', {
                method: 'POST',
                body: formData
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Thêm mã giảm giá thành công!');
                        location.reload(); // Reload trang sau khi thêm thành công
                    } else {
                        alert('Đã xảy ra lỗi: ' + data.message);
                    }
                })
                .catch(error => console.error('Lỗi:', error));
        });

