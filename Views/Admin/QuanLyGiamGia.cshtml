                            </div>
                            <div class="col-sm-2">
                                <a class="btn btn-delete btn-sm pdf-file" type="button" title="In" onclick="myFunction(this)">
                                    <i class="fas fa-file-pdf"></i> Xuất PDF
                                </a>
                            </div>
                            <div class="col-sm-2">
                                <a class="btn btn-delete btn-sm" type="button" title="Xóa" onclick="myFunction(this)">
                                    <i class="fas fa-trash-alt"></i> Xóa tất cả
                                </a>
                            </div>
                        </div>
                        <table class="table table-hover table-bordered" id="sampleTable">
                            <thead>
                                <tr>
                                    <th>Mã Giảm Giá</th>
                                    <th>Ngày Tạo</th>
                                    <th>Mức Giảm Giá (%)</th>
                                    <th>Điều Kiện</th>
                                    <th>Ngày Hết Hiệu Lực</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.MaGiamGia</td>
                                        <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                                        <td>@item.MucGiamGia</td>
                                        <td>@item.DieuKien</td>
                                        <td>@item.NgayHieuLuc.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            @if (item.NgayHieuLuc < DateTime.Now)
                                            {
                                                <span class="badge bg-danger">Hết hiệu lực</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Còn hiệu lực</span>
                                            }
                                        </td>
                                        <td>
                                            <button class="btn btn-primary btn-sm edit" type="button" title="Sửa">
                                                <i class="fa fa-edit"></i>
                                            </button>
                                            <button class="btn btn-danger btn-sm delete" type="button" title="Xóa">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
