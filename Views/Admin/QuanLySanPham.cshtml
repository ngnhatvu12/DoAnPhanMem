        async function saveChanges() {
            const productData = {
                MaSanPham: $("#editMaSanPham").val(),
                TenSanPham: $("#editTenSanPham").val(),
                MoTa: $("#editMoTa").val(),
                GiaBan: parseFloat($("#editGiaBan").val()),
                GiaGiam: parseFloat($("#editGiaGiam").val()),
