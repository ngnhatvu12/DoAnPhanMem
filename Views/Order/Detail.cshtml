@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Đơn Hàng Của Bạn";
    Layout = "~/Views/Shared/_LayoutOgani2.cshtml";
}

<div class="container order-container my-5" style="max-width:100%">
    <h2 class="text-center mb-4">Đơn Hàng Của Bạn</h2>
    <div class="order-tabs">
        <div class="tabs-header">
            <div class="tabs-container">
                <div class="tab-nav">
                    <a href="@Url.Action("Detail", "Order", new { status = "Đang xử lý" })" class="tab-link active" data-status="Đang xử lý">Chờ xác nhận</a>
                    <a href="@Url.Action("Detail", "Order", new { status = "Chờ lấy hàng" })" class="tab-link" data-status="Chờ lấy hàng">Chờ lấy hàng</a>
                    <a href="@Url.Action("Detail", "Order", new { status = "Đang giao hàng" })" class="tab-link" data-status="Đang giao hàng">Đang giao</a>
                    <a href="@Url.Action("Detail", "Order", new { status = "Đã hoàn thành" })" class="tab-link" data-status="Đã hoàn thành">Đã giao</a>
                    <a href="@Url.Action("Detail", "Order", new { status = "Đã hủy" })" class="tab-link" data-status="Đã hủy">Đã hủy</a>
                    <a href="@Url.Action("Detail", "Order", new { status = "Trả hàng" })" class="tab-link" data-status="Trả hàng">Trả hàng</a>
                    <div class="tab-indicator"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @if (!Model.Any())
            {
                <div class="empty-order">
                    <div class="empty-icon">
                        <i class="fas fa-box-open"></i>
                    </div>
                    <h4>Bạn chưa có đơn hàng nào</h4>
                    <p>Hãy khám phá cửa hàng của chúng tôi và tìm sản phẩm yêu thích!</p>
                    <a href="/" class="btn btn-primary">Mua sắm ngay</a>
                </div>
            }
            else
            {
                foreach (var donHang in Model)
                {
                    <div class="order-card mb-4 p-4 shadow-sm">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <h5>Mã đơn hàng: <a href="#">@donHang.MaDonHang</a></h5>
                                <p class="mb-0">Ngày đặt: <strong>@donHang.NgayDat.ToString("dd/MM/yyyy")</strong></p>
                            </div>
                            <span class="badge @GetStatusClass(donHang.TrangThai)">@donHang.TrangThai</span>
                        </div>

                        <div class="order-info">
                            <p><strong>Ngày giao dự kiến:</strong> @donHang.NgayGiao?.ToString("dd/MM/yyyy")</p>
                            <p><strong>Địa chỉ giao hàng:</strong> @donHang.DiaChiGiao</p>
                        </div>

                        <div class="payment-info mb-3">
                            <h6 class="mb-1">Thông tin thanh toán</h6>
                            <p><strong>Phương thức:</strong> @donHang.ThanhToan.PhuongThuc</p>
                            <p><strong>Trạng thái thanh toán:</strong> @donHang.ThanhToan.TrangThai</p>
                            <p><strong>Tổng tiền:</strong> @String.Format("{0:N0}", donHang.ThanhToan.TongTien) VND</p>
                        </div>

                        <div class="product-details">
                            <h6 class="mb-1">Chi tiết sản phẩm</h6>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Hình ảnh</th>
                                        <th>Sản phẩm</th>
                                        <th>Số lượng</th>
                                        <th>Giá bán</th>
                                        <th>Tổng tiền</th>
                                        <th>Đánh giá</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var chiTiet in donHang.ChiTietDonHang)
                                    {
                                        <tr>
                                            <td><img src="~/LayoutOgani/img/@chiTiet.HinhAnh" alt="Ảnh sản phẩm" class="product-image"></td>
                                            <td>@chiTiet.SanPham</td>
                                            <td>@chiTiet.SoLuong</td>
                                            <td>@String.Format("{0:N0}", chiTiet.GiaBan) VND</td>
                                            <td>@String.Format("{0:N0}", chiTiet.SoLuong * chiTiet.GiaBan) VND</td>
                                            <td>
                                                @if (donHang.TrangThai == "Đã hoàn thành")
                                                {
                                                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ratingModal"
                                                            data-product-id="@chiTiet.MaSanPham"
                                                            data-product-name="@chiTiet.SanPham"
                                                            data-product-image="@chiTiet.HinhAnh"
                                                            data-mahoadon="@donHang.MaHoaDon">
                                                        Đánh giá
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<div class="modal fade" id="ratingModal" tabindex="-1" aria-labelledby="ratingModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ratingModalLabel">Đánh giá sản phẩm</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="ratingForm" action="/Order/GhiDanhGia" method="post">
                    <input type="hidden" name="MaKhachHang" id="MaKhachHang">
                    <input type="hidden" name="MaHoaDon" id="MaHoaDon">
                    <input type="hidden" name="MaSanPham" id="MaSanPham">
                    <input type="hidden" name="SoDiem" id="SoDiem">


                    <div class="mb-3">
                        <label for="productName" class="form-label">Tên sản phẩm</label>
                        <input type="text" class="form-control" id="productName" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="productImage" class="form-label">Hình ảnh sản phẩm</label>
                        <img id="productImage" class="img-fluid" src="" alt="Hình ảnh sản phẩm">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Đánh giá</label>
                        <div class="rating">
                            <input type="radio" name="SoDiem" value="5" id="rating-5"><label for="rating-5">⭐</label>
                            <input type="radio" name="SoDiem" value="4" id="rating-4"><label for="rating-4">⭐</label>
                            <input type="radio" name="SoDiem" value="3" id="rating-3"><label for="rating-3">⭐</label>
                            <input type="radio" name="SoDiem" value="2" id="rating-2"><label for="rating-2">⭐</label>
                            <input type="radio" name="SoDiem" value="1" id="rating-1"><label for="rating-1">⭐</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="review" class="form-label">Nhận xét</label>
                        <textarea class="form-control" id="review" name="BinhLuan" rows="3" required></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary">Gửi đánh giá</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .order-page-container {
        max-width: 100%;
        margin: 0 auto;
        padding: 20px 10px;
    }

    .order-title {
        font-size: 28px;
        font-weight: 600;
        color: #333;
        text-align: center;
        margin-bottom: 30px;
    }

    .order-tabs {
        margin-bottom: 30px;
    }

    .tabs-header {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }

    .tabs-container {
        min-width: fit-content;
    }

    .tab-nav {
        display: flex;
        position: relative;
        border-bottom: 1px solid #e0e0e0;
        justify-content: space-around
    }

    .tab-link {
        padding: 12px 20px;
        font-size: 20px;
        font-weight: 500;
        color: #555;
        text-decoration: none;
        position: relative;
        transition: all 0.3s ease;
        white-space: nowrap;
    }

        .tab-link:hover {
            color: #2c7be5;
        }

        .tab-link.active {
            color: #2c7be5;
        }

    .tab-indicator {
        position: absolute;
        bottom: -1px;
        left: 0;
        height: 2px;
        background-color: #2c7be5;
        transition: all 0.3s ease;
        width: 100px; /* Default width */
    }
    /* Empty Order State */
    .empty-order {
        text-align: center;
        padding: 50px 20px;
        background: #f9f9f9;
        border-radius: 10px;
    }

    .empty-icon {
        font-size: 60px;
        color: #ccc;
        margin-bottom: 20px;
    }

    .empty-order h4 {
        font-size: 20px;
        color: #555;
        margin-bottom: 10px;
    }

    .empty-order p {
        color: #777;
        margin-bottom: 20px;
    }
    /* Giữ nguyên các style cũ */
    .order-card {
        border-radius: 8px;
        border: 1px solid #e0e6ed;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.03);
        margin-bottom: 15px;
    }

        .order-card h5 {
            font-size: 16px;
            color: #2c3e50;
        }

    .order-info p, .payment-info p {
        margin-bottom: 8px;
        font-size: 14px;
    }

    .payment-info h6 {
        font-size: 15px;
        color: #2c3e50;
        font-weight: 600;
        padding-bottom: 5px;
        border-bottom: 1px solid #eee;
    }

    /* Table improvements */
    .table {
        font-size: 13px;
    }

        .table th {
            background-color: #f8f9fa;
            font-weight: 600;
            color: #4a5568;
        }

    .product-image {
        width: 60px;
        height: 60px;
        object-fit: contain;
        border-radius: 4px;
        border: 1px solid #eee;
        background: #fff;
        padding: 2px;
    }

    /* Badge improvements */
    .badge {
        padding: 6px 12px;
        font-size: 12px;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    /* Rating stars */
    .rating {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-start;
    }

        .rating input[type="radio"] {
            display: none;
        }

        .rating label {
            color: #ddd;
            font-size: 20px;
            padding: 0 3px;
            cursor: pointer;
            transition: all 0.2s;
        }

            .rating input[type="radio"]:checked ~ label,
            .rating label:hover,
            .rating label:hover ~ label {
                color: #f39c12;
            }

    /* Empty state */
    .text-center {
        padding: 30px;
        background: #FFFFFF;
        border-radius: 8px;
        color: #000000;
    }

    /* Modal improvements */
    .modal-content {
        border-radius: 10px;
    }

    .modal-header {
        border-bottom: 1px solid #eee;
    }

    .modal-title {
        font-weight: 600;
        color: #2c3e50;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .col-md-3, .col-md-9 {
            padding-left: 10px;
            padding-right: 10px;
        }

        .order-status {
            margin-bottom: 20px;
        }

        .table {
            font-size: 12px;
        }

        .product-image {
            width: 40px;
            height: 40px;
        }
    }
</style>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Xác định tab active ban đầu dựa trên URL
    document.addEventListener('DOMContentLoaded', function () {
        // Lấy status từ URL
        const urlParams = new URLSearchParams(window.location.search);
        const status = urlParams.get('status') || 'Đang xử lý';

        // Tìm tab tương ứng
        const tabs = document.querySelectorAll('.tab-link');
        tabs.forEach(tab => {
            if (tab.dataset.status === status) {
                tab.classList.add('active');

                // Di chuyển indicator
                const indicator = document.querySelector('.tab-indicator');
                indicator.style.width = tab.offsetWidth + 'px';
                indicator.style.left = tab.offsetLeft + 'px';
            } else {
                tab.classList.remove('active');
            }
        });

        // Thêm sự kiện hover cho tab
        tabs.forEach(tab => {
            tab.addEventListener('mouseenter', function () {
                if (!this.classList.contains('active')) {
                    this.style.color = '#2c7be5';
                }
            });

            tab.addEventListener('mouseleave', function () {
                if (!this.classList.contains('active')) {
                    this.style.color = '#555';
                }
            });
        });
    });
</script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Gắn sự kiện khi modal mở
        var ratingModal = document.getElementById('ratingModal');
        ratingModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget; // Nút đã kích hoạt modal

            // Lấy thông tin từ thuộc tính data của nút
            var maHoaDon = button.getAttribute('data-mahoadon');
            var productId = button.getAttribute('data-product-id');
            var productName = button.getAttribute('data-product-name');
            var productImage = button.getAttribute('data-product-image');
            console.log(productId)
            console.log("Mã Hóa Đơn:", maHoaDon);
            // Gán thông tin vào các trường trong modal
            document.getElementById('MaHoaDon').value = maHoaDon;
            document.getElementById('MaSanPham').value = productId;
            document.getElementById('productName').value = productName;
            document.getElementById('productImage').src = "/LayoutOgani/img/" + productImage;


        });
    });
    document.addEventListener("DOMContentLoaded", function () {
        var ratingInputs = document.querySelectorAll('.rating input[type="radio"]');

        // Lắng nghe sự kiện thay đổi trên mỗi sao
        ratingInputs.forEach(function (input) {
            input.addEventListener("change", function () {
                const selectedValue = this.value;
                console.log("Điểm đánh giá:", selectedValue); // Kiểm tra giá trị khi chọn

                // Đặt điểm vào form khi gửi
                let soDiemInput = document.getElementById("SoDiem");
                if (!soDiemInput) {
                    // Nếu không có phần tử input với id "SoDiem", tạo phần tử mới và thêm vào form
                    soDiemInput = document.createElement("input");
                    soDiemInput.type = "hidden";
                    soDiemInput.name = "SoDiem";
                    soDiemInput.id = "SoDiem";
                    document.getElementById("ratingForm").appendChild(soDiemInput);
                }
                soDiemInput.value = selectedValue;
            });
        });
    });

</script>


@functions {
    private string GetStatusClass(string status)
    {
        switch (status.ToLower())
        {
            case "hoàn thành":
                return "badge-success";
            case "đang xử lý":
                return "badge-warning";
            case "hủy":
                return "badge-danger";
            default:
                return "badge-secondary";
        }
    }
}
