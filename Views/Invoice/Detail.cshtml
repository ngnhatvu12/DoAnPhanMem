@model DoAnPhanMem.ViewModels.InvoiceViewModel
@{
    Layout = "~/Views/Shared/_LayoutOgani2.cshtml";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Invoice</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"></link>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }
    </style>
</head>

<body class="bg-gray-100">
    <div class="container mx-auto p-4">
        <div class="bg-white shadow-md rounded-lg p-6">
            <div class="flex justify-between items-center border-b pb-4 mb-4">
                <h1 class="text-2xl font-bold">Invoice</h1>
            </div>
            <div class="mb-4">
                <h2 class="text-xl font-semibold">Customer Information</h2>
                <p class="mt-2">Name: @Model.TenKhachHang</p>
                <p>Email: @Model.Email</p>
                <p>Phone: @Model.SoDienThoai</p>
                <p>Address: @Model.DiaChi</p>
            </div>

            @foreach (var hoaDon in Model.HoaDons)
            {
                <div class="mb-4 border-t pt-4">
                    <h2 class="text-xl font-semibold">Order Details - Invoice ID: @hoaDon.MaHoaDon</h2>
                    <p>Date: @hoaDon.NgayLap.ToShortDateString()</p>
                    <p>Status: @hoaDon.TrangThai</p>
                    <table class="min-w-full bg-white">
                        <thead>
                            <tr>
                                <th class="py-2">Item</th>
                                <th class="py-2">Quantity</th>
                                <th class="py-2">Price</th>
                                <th class="py-2">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in hoaDon.ChiTietHoaDons)
                            {
                                <tr>
                                    <td class="border px-4 py-2">@item.TenSanPham</td>
                                    <td class="border px-4 py-2">@item.SoLuong</td>
                                    <td class="border px-4 py-2">$@item.Gia</td>
                                    <td class="border px-4 py-2">$@item.Tong</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="flex justify-end mt-4">
                        <div class="w-1/3">
                            <div class="flex justify-between py-2">
                                <span class="font-semibold">Subtotal:</span>
                                <span>$@hoaDon.ChiTietHoaDons.Sum(x => x.Tong)</span>
                            </div>
                            <div class="flex justify-between py-2">
                                <span class="font-semibold">Tax (10%):</span>
                                <span>$@(hoaDon.ChiTietHoaDons.Sum(x => x.Tong) * 0.1m)</span>
                            </div>
                            <div class="flex justify-between py-2">
                                <span class="font-semibold">Total:</span>
                                <span class="font-bold">$@(hoaDon.ChiTietHoaDons.Sum(x => x.Tong) * 1.1m)</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>

</html>
